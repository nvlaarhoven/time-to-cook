<div id="header">
  <p>It is time to cook</p>
</div>

<div id="content">
  <div id="searchwrap">
    <h1>Find a recipe</h1> 
    <form id="search-form">
      <div id="searchform-wrap">
        <input id="search-input" name="search" type="text" placeholder="Search by name or ingredients to find great recipes">
        <input id="search-button" type="submit" value="Search">
      </div>
    </form>
  </div>

  <div id="results">
    <% if @recipes.length == 0 %>
      <div id="noresults">
        <h2>Oops.. No recipes were found with this search term</h2>
      </div>
    <% else %>
      <% if @search_term == "" %>
        <h2>Start cooking with amazing recipes</h2>
      <% else %>
        <h2>Start cooking with '<%= @search_term %>' recipes</h2>
      <% end %>
      <% @recipes.each do |recipe| %>
        <% if recipe["title"].length < 30 %>
          <div id="resultbox">
            <div id="recipe_image"><%= link_to(image_tag(recipe["image_url"]), recipe["source_url"]) %></div>
            <div id="recipe_title"><%= link_to(raw(recipe["title"]), recipe["source_url"]) %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div id="footer">
  <p>Powered By <a href="http://food2fork.com/">Food2Fork.com</a></p>
</div>